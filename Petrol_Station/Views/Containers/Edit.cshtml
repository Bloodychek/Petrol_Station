@model Petrol_Station.ViewModels.ContainersViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container text-center align-middle w-50">
    <form method="post">
        <div>
            <input hidden asp-for="PageViewModel.PageNumber" value="@Model.PageViewModel.PageNumber" />
            <input hidden asp-for="Container.ContainerId" value="@Model.Container.ContainerId" />
        </div>

        <h2>Edit entity</h2>

        <div asp-validation-summary="ModelOnly" class="text-danger text-justify w-100 m-lg-0"></div>

        <p>
            <label asp-for="Container.Number"></label><br />
            <input asp-for="Container.Number" class="w-75" />
        <p><span asp-validation-for="Container.Number" class="text-danger"></span></p>

        <p>
            <label asp-for="Container.TankCapacity"></label><br />
            <input asp-for="Container.TankCapacity" class="w-75" />
        <p><span asp-validation-for="Container.TankCapacity" class="text-danger"></span></p>

        <p>
            <input type="submit" value="Save" class="btn btn-success w-75" />
        <p><a asp-action="Index" asp-route-page="@Model.PageViewModel.PageNumber" class="btn btn-danger w-75">Back</a></p>
    </form>
</div>